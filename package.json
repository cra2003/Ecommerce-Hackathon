{
	"name": "hackathon-1",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"auth-worker",
		"cart-worker",
		"cart-cron-worker",
		"order-worker",
		"payment-worker",
		"fullfilment-worker",
		"price-worker",
		"product-worker"
	],
	"scripts": {
		"lint": "npm run lint -ws",
		"lint:fix": "npm run lint:fix -ws",
		"format": "npm run format -ws",
		"format:check": "prettier --check \"**/*.{js,json,md}\" --ignore-path .gitignore --ignore-path frontend-ui/.gitignore --ignore \"frontend-ui/**\" --ignore \"**/node_modules/**\" --ignore \"**/.wrangler/**\" --ignore \"**/.svelte-kit/**\"",
		"test": "npm run test -ws --if-present",
		"prepare": "husky"
	},
	"devDependencies": {
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"prettier": "^3.2.4",
		"wrangler": "^4.46.0",
		"husky": "^9.1.7"
	}
}
